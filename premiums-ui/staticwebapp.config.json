{
  "routes": [
    { "route": "/login",  "redirect": "/.auth/login/aadb2c" },
    { "route": "/logout", "redirect": "/.auth/logout?post_logout_redirect_uri=/" },
    { "route": "/api/*",  "allowedRoles": ["authenticated"] }
  ],
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "b2c": {
          "registration": {
            "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
            "wellKnownOpenIdConfiguration": "https://bestpremiums.ciamlogin.com/82e80f79-fa7a-48ac-91d6-88480fa3ec06/v2.0/.well-known/openid-configuration?appid=a78bf024-c9cc-4557-a216-ccab1515c02b"
            }
          },
          "login": { "scopes": ["openid", "profile", "email"] }
        }
      }
    }
  },
  "navigationFallback": { "rewrite": "/index.html" },
  "responseOverrides": { "401": { "redirect": "/login", "statusCode": 302 } }
}
