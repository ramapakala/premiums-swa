{
  "routes": [
    { "route": "/login",  "redirect": "/.auth/login/aadb2c" },
    { "route": "/logout", "redirect": "/.auth/logout" },
    { "route": "/api/*",  "allowedRoles": ["authenticated"] }
  ],
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "aadb2c": {
          "registration": {
            "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://bestpremiums.ciamlogin.com/bestpremiums.onmicrosoft.com/v2.0/.well-known/openid-configuration?appid=a78bf024-c9cc-4557-a216-ccab1515c02b"
            }
          },
          "login": { "scopes": ["openid", "profile", "email"] }
        }
      }
    }
  }
}
